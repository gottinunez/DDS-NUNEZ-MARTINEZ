datasource db {
  provider = "sqlite" // Cambia esto si usas otro sistema de gesti√≥n de bases de datos
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

model Notificacion {
  id          Int      @id @default(autoincrement())
  titulo      String
  mensaje     String
  scheduledAt DateTime
  createdAt   DateTime @default(now())
  isSent      Boolean  @default(false)
}

model Mercaderia {
  id              Int    @id @default(autoincrement())
  nombre          String
  precio          Float
  marca           String
  stockDisponible Int
}

model Mayorista {
  id         Int    @id @default(autoincrement())
  nombre     String
  pagina_web String
  ubicacion  String
}
