datasource db {
  provider = "sqlite" // Cambia esto si usas otro sistema de gesti√≥n de bases de datos
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Notificacion {
  id      Int      @id @default(autoincrement())
  titulo  String
  mensaje String
  fecha   DateTime @default(now())
}
